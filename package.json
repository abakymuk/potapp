{
  "name": "potlucky",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "lint": "eslint .",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "typecheck": "turbo run typecheck",
    "prepare": "husky",
    "check:fast": "pnpm format:check && pnpm lint && pnpm typecheck",
    "check:build": "pnpm build",
    "check:env": "node scripts/check-env.mjs",
    "check:rls": "node scripts/check-rls.mjs",
    "check:all": "pnpm check:fast && pnpm check:build && pnpm check:env && pnpm check:rls",
    "db:seed": "tsx scripts/seed.ts",
    "polish:write": "pnpm format && pnpm lint --fix || true",
    "clean:all": "turbo run clean && rimraf .turbo",
    "fix": "pnpm polish:write && pnpm lint && pnpm typecheck",
    "audit:info": "pnpm audit || true"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,css,scss,yml,yaml}": [
      "prettier -w"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "dotenv": "^17.2.1",
    "eslint": "^9",
    "eslint-config-prettier": "^9",
    "eslint-import-resolver-typescript": "^3",
    "eslint-plugin-import": "^2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "turbo": "^2.0.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^7"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.56.0",
    "posthog-js": "^1.261.0",
    "posthog-node": "^5.8.1",
    "uuid": "^11.1.0"
  }
}
